	</files>

	<!-- Config parameter -->
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
						name="baseUrl"
						type="text"
						default="https://j4x.alexapi.cloud"
						hint="https://j40.example.org"
						label="PLG_SYSTEM_ELODIE_BASE_URL_LABEL"
						description="PLG_SYSTEM_ELODIE_BASE_URL_DESCRIPTION"
