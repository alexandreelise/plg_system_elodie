	<!-- Scripts to run on installation -->
	<scriptfile>script.php</scriptfile>

	<!-- Media files -->
	<media folder="media" destination="plg_system_elodie">
		<folder>data</folder>
		<folder>js</folder>
		<folder>css</folder>
		<folder>images</folder>
	</media>


	<!-- Plugin files -->
	<files>
		<filename plugin="elodie">elodie.php</filename>
		<filename>LICENSE</filename>
